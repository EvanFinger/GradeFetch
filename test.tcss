
MainContainer {
    width: 100%;
}

CredentialInput {
    width: 100%;
    background: $boost;
    margin: 1;
    padding: 1;
    height: 14;
}

CredInput_Layer2 {
    width: 100%;
    padding: 1;
    layout: horizontal;
}

ProgBars {
    width: 50%;
}

#close {
    width: 7.5%;
    display: none;
}
#load {
    width: 7.5%;
}
#saved {
    width: 7.5%;
}
#fetch {
    width: 7.5%;
    display: none;
}
.profile_loaded #close {
    display: block;
}
.profile_loaded #load {
    display: none;
}
.profile_loaded #saved {
    display: none;
}
.profile_loaded #fetch {
    display: block;
}

CredentialDisplay {
    width: 35%;
}

#name_label {
    width: 100%;
    text-align: center;
}

#name_display {
    width: 100%;
    text-align: center;
}

#uid_display {
    width: 100%;
    text-align: center;
}

.hidden SavedCredentials {
    display: none;
}
.hidden #profile_options {
    display: none;
}